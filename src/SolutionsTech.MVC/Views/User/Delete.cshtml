@model SolutionsTech.Business.Entity.User

@{
	ViewData["Title"] = "Delete";
}

<div class="row">
	<div class="col-12">
		<div class="page-title-box">
			<div class="page-title-right">
			</div>
			<h4 class="page-title">Deletar Produto</h4>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-body">
				<form asp-action="Delete" method="post" class="needs-validation">

					<div class="mb-1">
						<label asp-for="Name" class="control-label">Nome</label>
						<input class="form-control" asp-for="Name" />
					</div>
					<div class="mb-1">
						<label asp-for="Cel" class="control-label">Celular</label>
						<input class="form-control" asp-for="Cel" />
					</div>
					<div class="mb-1">
						<label asp-for="Email" class="control-label">Email</label>
						<input class="form-control" asp-for="Email" />
					</div>
					<div class="mb-1">
						<label asp-for="Address" class="control-label">Endereço</label>
						<input class="form-control" asp-for="Address" />
					</div>
					<div class="mb-1">
						<label asp-for="DtBorn" class="control-label">Data de Nascimento</label>
						<input class="form-control" asp-for="DtBorn" />
					</div>
					<div class="mb-1">
						<label asp-for="DtCreate" class="control-label">Data de Criação</label>
						<input class="form-control" asp-for="DtCreate" />
					</div>
					<br />
					<input type="hidden" asp-for="IdUser" />
					<button class="btn btn-danger" value="Delete" type="submit">Delete</button>
					<a asp-action="Index" class="btn btn-secondary">Voltar</a>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/datatable/datatable.js"></script>
	<script>
		$(document).ready(function () {
			new DataTable('#example');
		});
	</script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
