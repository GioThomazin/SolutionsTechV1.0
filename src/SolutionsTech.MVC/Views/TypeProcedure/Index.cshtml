@model IEnumerable<SolutionsTech.MVC.Dto.TypeProcedureDto>

@{
	ViewData["Title"] = "Index";
}

@{
	ViewData["Title"] = "Formularios";
}


<link href="~/datatable/datatable.css" rel="stylesheet" />

<style>
	body {
		font-size: 18px; /* Aumenta a fonte geral da página */
	}

	.page-title {
		font-size: 24px; /* Aumenta o título */
	}

	table {
		font-size: 18px; /* Aumenta a fonte dentro da tabela */
	}

	.btn {
		font-size: 18px; /* Aumenta os botões */
	}

	table {
		font-size: 18px; /* Aumenta o tamanho da fonte */
	}

	th, td:not(.sorting_1) {
		text-align: center !important;
		vertical-align: middle !important;
	}

	a.text-body {
		font-size: 18px; /* Aumenta os botões */
	}

</style>

<div class="row">
	<div class="col-12">
		<div class="page-title-box">
			<div class="page-title-right">
			</div>
			<h4 class="page-title">Procedimentos</h4>
		</div>
	</div>
</div>

@await Component.InvokeAsync("Summary")

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<div class="row mb-2">
					<div class="col-sm-5">

						<form asp-action="Create" method="get">
							<button class="btn btn-danger mb-2" type="submit">
								<i class="ri-add-circle-fill me-2"></i> Criar Procedimento
							</button>
						</form>

					</div>
					<div class="col-sm-7">
						<div class="text-sm-end">
							<button type="button" class="btn btn-success mb-2 me-1">Exportar Dados</button>
						</div>
					</div>
				</div>
				<table id="example" class="table" style="width:100%">
					<thead class="table-light">
						<tr>
							<th>Nome</th>
							<th>Valor</th>
							<th>Duração</th>
							<th>Opções</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td class="sorting_3 text-center">
									<p class="m-0 d-inline-block align-middle font-16">
										<a href="apps-ecommerce-products-details.html" class="text-body">@Html.DisplayFor(modelItem => item.Name)</a>
									</p>
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Value)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Duration)
								</td>
								<td class="table-action">
									<a asp-action="Edit" asp-route-id="@item.IdTypeProcedure" class="action-icon">
										<i class="ri-edit-box-line"></i>
									</a>				
									
									<a asp-action="Delete" asp-route-id="@item.IdTypeProcedure" class="action-icon">
										<i class="ri-delete-bin-line"></i>
									</a>

								</td>
							</tr>
						}
					</tbody>

				</table>
			</div>
		</div>
	</div>
</div>

@section Scripts {

	<script src="~/datatable/datatable.js"></script>

	<script>

		$(document).ready(function () {
			new DataTable('#example');
		});

	</script>
}


